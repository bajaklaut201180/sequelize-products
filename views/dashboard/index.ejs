<!DOCTYPE html>
<html>
  <head>
    <title><%= titlePage %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.css">
  </head>
  <body>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <a class="navbar-brand" href="#"><%= user.email %></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item active">
                <a class="nav-link" href="/">Home </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>

      <main>

        <div class="container">
          <h1>My Product</h1>
          
          <form method="GET" class="mb-5" style="display:flex;gap:1rem;justify-content: end;">
            <div class="form-group">
              <input type="text" class="form-control" id="search" name="search" aria-describedby="emailHelp" placeholder="Search Product">
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
          </form>
          <a href="/add" class="btn btn-primary">Add Product</a>
          <table class="table">
            <thead>
              <tr>
                <th>No</th>
                <th>Name</th>
                <th>Stock</th>
                <th>Harga</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% for(var i=0; i < products.length; i++) { %>
                <tr>
                  <td><%= i+1 %></td>
                  <td><%= products[i].name %></td>
                  <td><%= products[i].stock %></td>
                  <td><%= products[i].harga %></td>
                  <td>
                    <a href="/edit/<%=products[i].id%>">Edit</a>
                    <a href="/delete/<%=products[i].id%>">Delete</a>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        
        </div>
     
    </main>
  </body>
</html>
